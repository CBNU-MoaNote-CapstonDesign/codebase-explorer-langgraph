{
    "configurations": [
        {
        "name": "Jest: Debug All (ESM)",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
        "args": ["--runInBand", "--testTimeout=60000"],
        "runtimeArgs": ["--inspect-brk", "--experimental-vm-modules"],
        "env": {
            "NODE_ENV": "test"
        },
        "console": "integratedTerminal",
        },
        {
        "name": "Jest: Debug Current File",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
        "args": ["--runInBand", "${file}"],
        "runtimeArgs": ["--inspect-brk", "--experimental-vm-modules"],
        "env": {
            "NODE_ENV": "test"
        },
        "console": "integratedTerminal",
        }
    ]
}